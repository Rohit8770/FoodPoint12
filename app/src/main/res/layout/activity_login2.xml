<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellips1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellips2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:src="@drawable/ellips3"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="26sp"
        android:layout_marginTop="70sp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/sofia_pro_semi_bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_marginLeft="26sp"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/sofia_pro_regular"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="27sp"
        app:cardCornerRadius="10sp"
        android:elevation="10sp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:inputType="text"
            android:background="@null"
            android:padding="14sp"
            android:hint="abc123@gmail.com"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="26sp"
        android:layout_marginTop="25sp"
        android:fontFamily="@font/sofia_pro_regular"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="27sp"
        app:cardCornerRadius="10sp"
        android:elevation="10sp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:inputType="text"
            android:background="@null"
            android:hint="********"
            android:textSize="20sp"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:textColor="@color/orengeFixed"
        android:textSize="16sp"
        android:fontFamily="@font/sofia_pro_medium"/>


    <LinearLayout
        android:layout_width="248sp"
        android:layout_gravity="center"
        android:layout_marginTop="29sp"
        android:gravity="center"
        android:background="@drawable/button_signup"
        android:layout_height="60sp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:fontFamily="@font/sofia_pro_semi_bold"
            android:text="LOGIN"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="20sp"
        android:text="Already has an account?           "
        android:fontFamily="@font/sofia_pro_medium"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:layout_marginLeft="105sp"
        android:layout_marginTop="-24sp"
        android:text="Sign Up "
        android:fontFamily="@font/sofia_pro_regular"
        android:textColor="@color/orengeFixed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with"
        android:layout_marginTop="35sp"
        android:fontFamily="@font/sofia_pro_medium"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="-10sp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view1"
            android:layout_width="100sp"
            android:background="@color/ss_medium_grey"
            android:layout_marginLeft="40sp"
            android:layout_height="1sp"/>
        <View
            android:id="@+id/view2"
            android:layout_width="100sp"
            android:layout_marginLeft="260sp"
            android:background="@color/ss_medium_grey"
            android:layout_height="1sp"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="150sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23sp"
        android:background="@drawable/fb_design"
        android:layout_height="55sp">
        <ImageView
            android:layout_width="45sp"
            android:layout_height="35sp"
            android:layout_marginTop="11sp"
            android:layout_marginLeft="8sp"
            android:src="@drawable/facebook" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="19sp"
            android:text="FACEBOOK"
            android:textStyle="bold"
            android:fontFamily="@font/sofia_pro_medium"
            android:layout_marginLeft="6sp"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150sp"
        android:layout_marginTop="-53sp"
        android:layout_gravity="end"
        android:layout_marginRight="30sp"
        android:background="@drawable/fb_design"
        android:layout_height="55sp">
        <ImageView
            android:layout_width="40sp"
            android:layout_marginTop="13sp"
            android:layout_marginLeft="8sp"
            android:layout_height="30sp"
            android:src="@drawable/google" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="19sp"
            android:textStyle="bold"
            android:layout_marginLeft="14sp"
            android:text="GOOGLE"
            android:fontFamily="@font/sofia_pro_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>