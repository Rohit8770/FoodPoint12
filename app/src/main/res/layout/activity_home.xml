<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10ssp"
        android:layout_margin="@dimen/_10ssp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10ssp"
            android:elevation="@dimen/_7ssp">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/menu_bar" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deliver to"
            android:layout_marginTop="-17sp"
            android:layout_marginLeft="@dimen/_60ssp"
            android:textColor="#8C9099"
            android:fontFamily="@font/sofia_pro_medium"
            android:textSize="@dimen/_13ssp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4102 Pratty View Lane"
            android:textColor="@color/orengeFixed"
            android:layout_marginTop="@dimen/_10ssp"
            android:fontFamily="@font/sofia_pro_medium"
            android:textSize="@dimen/_13ssp"
            android:layout_marginLeft="-110sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            app:cardCornerRadius="@dimen/_10ssp"
            android:elevation="@dimen/_7ssp">

        <ImageView
            android:layout_width="47sp"
            android:layout_height="47sp"
            android:src="@drawable/person"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like"
        android:fontFamily="@font/sofia_pro_bold"
        android:layout_marginLeft="@dimen/_20ssp"
        android:textSize="@dimen/_23ssp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to order"
        android:layout_marginTop="-10sp"
        android:fontFamily="@font/sofia_pro_bold"
        android:layout_marginLeft="@dimen/_20ssp"
        android:textSize="@dimen/_23ssp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15ssp"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40ssp"
        android:layout_marginLeft="@dimen/_25ssp"
        app:cardCornerRadius="@dimen/_5ssp"
        android:elevation="@dimen/_5ssp">
        <ImageView
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80sp"
            android:layout_marginLeft="5sp"
            android:src="@drawable/search_bar" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/_10ssp"
            android:hint="Find for food or restaurant..."
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8ssp"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10ssp"
            app:cardCornerRadius="@dimen/_7ssp"
            android:elevation="@dimen/_5ssp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:src="@drawable/menu2nd" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>