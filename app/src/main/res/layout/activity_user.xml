<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity">


    <ImageView
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/coppee_page"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/layer_second"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:layout_gravity="end"
            android:backgroundTint="@color/white"
            android:textColor="@color/orengeFixed"
            android:text="Skip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:layout_marginTop="60sp"
            android:layout_marginLeft="30sp"
            android:fontFamily="@font/sofia_pro_bold"
            android:textSize="55sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FoodHub"
            android:textColor="@color/orengeFixed"
            android:layout_marginLeft="30sp"
            android:textSize="50sp"
            android:fontFamily="@font/sofia_pro_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your favourite foods delivered"
            android:textColor="@color/black"
            android:layout_marginLeft="30sp"
            android:textSize="19sp"
            android:fontFamily="@font/sofia_pro_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast at your door."
            android:textColor="@color/black"
            android:layout_marginLeft="30sp"
            android:textSize="19sp"
            android:fontFamily="@font/sofia_pro_regular"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with"
            android:fontFamily="@font/sofia_pro_medium"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="180sp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="-10sp"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="100sp"
                android:background="@color/white"
                android:layout_marginLeft="40sp"
                android:layout_height="1sp"/>
            <View
                android:id="@+id/view2"
                android:layout_width="100sp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="260sp"
                android:background="@color/white"
                android:layout_height="1sp"/>

        </RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="47sp"
            android:layout_marginLeft="75sp"
            android:layout_height="wrap_content">
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="86sp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white" />
        </androidx.cardview.widget.CardView>
</LinearLayout>

        <LinearLayout
            android:id="@+id/facebookAuth"
            android:layout_width="150sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-50sp"
            android:background="@drawable/fb_design"
            android:layout_height="55sp">
            <ImageView
                android:layout_width="45sp"
                android:layout_height="35sp"
                android:layout_marginTop="11sp"
                android:layout_marginLeft="8sp"
                android:src="@drawable/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:text="FACEBOOK"
                android:textColor="@color/black"
                android:layout_marginTop="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/sofia_pro_medium"
                android:layout_marginLeft="6sp"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/googleAuth"
            android:layout_width="150sp"
            android:layout_marginTop="-53sp"
            android:layout_gravity="end"
            android:layout_marginRight="30sp"
            android:background="@drawable/fb_design"
            android:layout_height="55sp">
            <ImageView
                android:layout_width="40sp"
                android:layout_marginTop="13sp"
                android:layout_marginLeft="8sp"
                android:layout_height="30sp"
                android:src="@drawable/google" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="19sp"
                android:textStyle="bold"
                android:layout_marginLeft="14sp"
                android:text="GOOGLE"
                android:fontFamily="@font/sofia_pro_medium"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340sp"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:background="@drawable/button_file"
            android:layout_height="54sp">
            <TextView
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:text="Start with email or phone"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="70sp"
                android:fontFamily="@font/sofia_pro_medium"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="20sp"
            android:text="Already has an account? Sign In"
            android:fontFamily="@font/sofia_pro_regular"
            android:textColor="@color/white"/>

        <View
            android:id="@+id/view3"
            android:layout_width="55sp"
            android:layout_marginLeft="279sp"
            android:backgroundTint="@color/white"
            android:layout_height="1sp"/>
        <View
            android:id="@+id/view4"
            android:layout_width="150sp"
            android:layout_gravity="center"
            android:layout_marginTop="29sp"
            android:background="@color/white"
            android:layout_height="5sp"/>

    </LinearLayout>
</RelativeLayout>